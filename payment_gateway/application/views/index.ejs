      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: #fff;
    }

    /* Add a subtle dark overlay over the background image for better readability */
    body::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
      z-index: 1;
    }

    header {
      text-align: center;
      margin-bottom: 40px;
      z-index: 2; /* Stack above the overlay */
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 10px;
      text-transform: uppercase;
      color: #f4f4f4;
    }

    p {
      font-size: 1.2rem;
      font-weight: 300;
      max-width: 600px;
      margin: 0 auto;
      color: #d4eef6;
    }

    .button-container {
      margin-top: 30px;
      display: flex;
      flex-direction: column;
      gap: 20px;
      z-index: 2; 
    }

    .button {
      display: block;
      padding: 14px 30px;
      font-size: 1rem;
      font-weight: 600;
      text-align: center;
      border: none;
      border-radius: 30px;
      background-color: #e76f51;
      color: #fff;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.3s ease;
      width: 300px;
    }

    .button:hover {
      background-color: #f4a261;
      transform: translateY(-3px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    .footer {
      position: absolute;
      bottom: 20px;
      font-size: 0.9rem;
      color: #d4eef6;
      text-align: center;
      z-index: 2; /* Stack above the overlay */
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
      h1 {
        font-size: 2.5rem;
      }

      p {
        font-size: 1rem;
        padding: 0 20px;
      }

      .button {
        width: 180px;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>Welcome to International Bank Transfer System</h1>
