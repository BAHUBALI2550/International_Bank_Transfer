<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Account Activities</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(120deg, #f6d365, #fda085);
      min-height: 100vh;
      margin: 0;
      font-family: 'Roboto', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .container {
      background: #fff;
      padding: 2rem;
      border-radius: 15px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      width: 100%;
      max-width: 900px;
    }

    h1 {
      font-size: 2rem;
      font-weight: bold;
      color: #3f51b5;
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .alert {
      margin-bottom: 1.5rem;
      font-weight: 500;
    }

    .table {
      border-radius: 10px;
      overflow: hidden;
    }

    .table th {
      background-color: #f6d365;
      color: #fff;
      text-align: center;
    }

    .table td {
      text-align: center;
      vertical-align: middle;
    }

    .btn {
      display: block;
      width: 200px;
      margin: 2rem auto 0;
      text-align: center;
      border-radius: 25px;
      transition: 0.3s;
    }

    .btn-secondary {
      background-color: #03a9f4;
      border-color: #03a9f4;
    }

    .btn-secondary:hover {
      background-color: #0288d1;
    }

    .no-activities {
      margin-top: 20px;
      text-align: center;
      font-size: 1.2rem;
      color: #555;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Account Activities</h1>

    <% if (typeof error !== 'undefined' && error === 'invalid_credentials') { %>
      <div class="alert alert-danger text-center">Invalid username!</div>
    <% } %>

    <% if (payments && payments.length > 0) { %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Recipient Account</th>
            <th>Sending Account</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Rate</th>
          </tr>
        </thead>
        <tbody>
          <% payments.forEach((payment) => { %>
            <tr>
              <td><%= payment.receiverAccountID %></td>
              <td><%= payment.senderAccountID %></td>
              <td><%= payment.amount %></td>
              <td><%= payment.date %></td>
              <td><%= payment.exchangeRate %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="no-activities">The customer's account activities could not be found.</p>
    <% } %>

    <a href="/customerHome" class="btn btn-secondary">Main Page</a>
  </div>
</body>

</html>
