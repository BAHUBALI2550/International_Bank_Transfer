<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bank Page</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

  <style>
    body {
      margin: 0;
      font-family: 'Roboto', sans-serif;
      background: linear-gradient(120deg, #f6d365, #fda085);
      /* Retain existing background */
      background-attachment: fixed;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 0 1rem;
    }

    .content {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: wrap;
      width: 100%;
      max-width: 1200px;
      padding: 2rem;
      background: #ffffff;
      border-radius: 15px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .container {
      flex: 1;
      padding: 1.5rem;
      border-radius: 10px;
    }

    .separator {
      width: 3px;
      background: rgba(0, 0, 0, 0.1);
      margin: 0 2rem;
      align-self: stretch;
    }

    h1 {
      font-size: 1.8rem;
      text-align: center;
      font-weight: bold;
      color: #333;
      margin-bottom: 1rem;
    }

    hr {
      border: none;
      height: 2px;
      background: rgba(0, 0, 0, 0.1);
      margin-bottom: 1rem;
    }

    .form-group label {
      font-weight: 500;
      color: #555;
    }

    .form-group input {
      border-radius: 5px;
      box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
    }

    .btn {
      border-radius: 25px;
      font-weight: bold;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .btn-primary {
      background-color: #3f51b5;
      border-color: #3f51b5;
      color: #fff;
    }

    .btn-primary:hover {
      background-color: #2e3ca7;
      transform: scale(1.05);
    }

    .alert {
      font-weight: bold;
    }

    .hidden {
      display: none;
    }

    @media (max-width: 768px) {
      .content {
        flex-direction: column;
        align-items: center;
      }

      .separator {
        display: none;
      }
    }
  </style>
</head>

<body>
  <div class="content">
    <!-- LogIn and SignUp Section controlled via Tabs -->
    <div class="container">
      <h1>Bank Portal</h1>
      <hr />
      <!-- Tabs for Log In and Sign Up -->
      <ul class="nav nav-tabs" id="bankTabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="login-tab" data-toggle="tab" href="#login" role="tab" aria-controls="login"
            aria-selected="true">Log In</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="CreateBank-tab" data-toggle="tab" href="#CreateBank" role="tab"
            aria-controls="CreateBank" aria-selected="false">CreateBank</a>
        </li>
      </ul>

      <!-- Tab Content -->
      <div class="tab-content" id="bankTabContent">
        <!-- Log In Form -->
        <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
          <h2 class="mt-3">Bank Log In</h2>
          <hr />
          <% if (typeof error !=='undefined' && error==='invalid_credentials' ) { %>
            <div class="alert alert-danger">Invalid username or password. Please try again.</div>
            <% } %>

              <form action="/loginBank" method="POST">
                <div class="form-group">
                  <label for="bankadminID">Bank Admin ID:</label>
                  <input type="text" class="form-control" id="bankadminID" name="bankadminID" required>
                </div>
                <div class="form-group">
                  <label for="bankID">Bank ID:</label>
                  <input type="text" class="form-control" id="bankID" name="bankID" required>
                </div>
                <div class="form-group">
                  <label for="password">Password:</label>
                  <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Log In</button>
              </form>
        </div>

        <!-- Sign Up Form -->
        <div class="tab-pane fade" id="CreateBank" role="tabpanel" aria-labelledby="CreateBank-tab">
          <h2 class="mt-3">Create Bank</h2>
          <hr />
          <% if (typeof error !=='undefined' && error==='invalid_user' ) { %>
            <div class="alert alert-danger">Invalid admin.</div>
            <% } %>

              <form action="/createBank" method="POST">
                <div class="form-group">
                  <label for="bankadminID">Bank Admin ID:</label>
                  <input type="text" class="form-control" id="bankadminID" name="bankadminID" required>
                </div>
                <div class="form-group">
                  <label for="bankID">Bank ID:</label>
                  <input type="text" class="form-control" id="bankID" name="bankID" required>
                </div>
                <div class="form-group">
                  <label for="password">Password:</label>
                  <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="form-group">
                  <label for="name">Bank Name:</label>
                  <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group">
                  <label for="country">Country:</label>
                  <input type="text" class="form-control" id="country" name="country" required>
                </div>
                <div class="form-group">
                  <label for="currency">Currency:</label>
                  <input type="text" class="form-control" id="currency" name="currency" required pattern="^[A-Z]{3}$"
                    title="Please enter in standard format (EUR, USD ...)">
                </div>
                <div class="form-group">
                  <label for="reserves">Reserves:</label>
                  <input type="number" class="form-control" id="reserves" name="reserves" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Create Bank</button>
              </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>